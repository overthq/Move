{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"allowJs": false,
		"composite": true,
		"skipLibCheck": true,
		"noEmit": false,
		"outDir": "dist",
		"rootDir": "src",
		"module": "commonjs",
		"lib": ["dom", "esnext"],
		"target": "es5",
		"esModuleInterop": true,
		"typeRoots": [
      "./node_modules/@types",
      "../../node_modules/@types"
    ]
	},
	"exclude": ["**/*.js", "node_modules"],
	"include": ["src"]
}
